<Window x:Class="Client.Views.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginP">

    <Grid>
        <TextBlock x:Name="Text" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Chat area" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Margin="10,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="submitButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="207,241,0,0" Height="18" Width="83" Content="Submit"
                Click="buttonSend_Click"/>
    </Grid>
</Window>
