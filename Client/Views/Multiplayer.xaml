<Window x:Class="Client.Views.Multiplayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battleship"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginP">
    <Grid>
        <TextBlock x:Name="Games" HorizontalAlignment="Left" Margin="103,70,0,0" TextWrapping="Wrap" Text="Test" VerticalAlignment="Top"/>
        <ComboBox x:Name="GamesComboBox" SelectionChanged="GamesComboBox_OnSelectionChanged" Height="25" Width="400">
            <ComboBoxItem Content="Minesweeper"/>
        </ComboBox>

        <Button x:Name="NewGame" Content="New Game" HorizontalAlignment="Left" Margin="103,214,0,0" VerticalAlignment="Top" Width="75" Click="NewGame_Click"/>
        <Button x:Name="Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="103,239,0,0" VerticalAlignment="Top" Width="75" Click="Refresh_Click"/>
    </Grid>

</Window>
